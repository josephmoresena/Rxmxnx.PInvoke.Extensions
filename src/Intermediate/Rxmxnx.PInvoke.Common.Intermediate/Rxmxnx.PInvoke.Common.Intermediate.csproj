<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>Rxmxnx.PInvoke</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Deterministic>true</Deterministic>
        <IsTrimmable Condition="$(DefineConstants.Contains('NET6_0_OR_GREATER'))">true</IsTrimmable>
        <EnableTrimAnalyzer Condition="$(DefineConstants.Contains('NET6_0_OR_GREATER'))">true</EnableTrimAnalyzer>
        <DocumentationFile>./$(AssemblyName).xml</DocumentationFile>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <ExcludeXmlAssemblyFiles>false</ExcludeXmlAssemblyFiles>
        <LangVersion>latest</LangVersion>
        <TrimmerSingleWarn>false</TrimmerSingleWarn>
        <DefineConstants Condition="'$(DISABLE_BINARY_SPACES)' != 'true'">$(DefineConstants);BINARY_SPACES</DefineConstants>
    </PropertyGroup>

    <ItemGroup Condition="$(DefineConstants.Contains('NETSTANDARD2_1'))">
        <PackageReference Include="System.Memory" Version="4.6.3"/>
        <PackageReference Include="System.Buffers" Version="4.6.1"/>
    </ItemGroup>

    <ItemGroup Condition="!$(DefineConstants.Contains('NET8_0_OR_GREATER'))">
        <PackageReference Condition="$(DefineConstants.Contains('NETSTANDARD2_1')) Or $(DefineConstants.Contains('NETCOREAPP3_0'))" Include="System.Runtime.CompilerServices.Unsafe" Version="4.7.1"/>
        <PackageReference Condition="$(DefineConstants.Contains('NET5_0')) Or $(DefineConstants.Contains('NETCOREAPP3_1'))" Include="System.Runtime.CompilerServices.Unsafe" Version="6.0.0"/>
        <PackageReference Condition="$(DefineConstants.Contains('NET6_0_OR_GREATER'))" Include="System.Runtime.CompilerServices.Unsafe" Version="6.1.2"/>

        <PackageReference Condition="$(DefineConstants.Contains('NETSTANDARD2_1')) Or $(DefineConstants.Contains('NETCOREAPP3_0'))" Include="System.Text.Json" Version="4.7.2"/>
        <PackageReference Condition="$(DefineConstants.Contains('NET5_0')) Or $(DefineConstants.Contains('NETCOREAPP3_1'))" Include="System.Text.Json" Version="6.0.11"/>
        <PackageReference Condition="$(DefineConstants.Contains('NET6_0_OR_GREATER'))" Include="System.Text.Json" Version="8.0.5"/>
    </ItemGroup>

    <ItemGroup>
        <Using Include="System.Buffers"/>
        <Using Include="System.Collections"/>
        <Using Include="System.ComponentModel"/>
        <Using Include="System.Diagnostics.CodeAnalysis"/>
        <Using Include="System.Globalization"/>
        <Using Include="System.Numerics"/>
        <Using Include="System.Reflection"/>
        <Using Include="System.Runtime"/>
        <Using Include="System.Runtime.CompilerServices"/>
        <Using Include="System.Runtime.InteropServices"/>
        <Using Include="System.Runtime.InteropServices.Marshalling"/>
        <Using Include="System.Runtime.Intrinsics"/>
        <Using Include="System.Runtime.Intrinsics.X86"/>
        <Using Include="System.Runtime.Intrinsics.Arm"/>
        <Using Include="System.Runtime.Serialization"/>
        <Using Include="System.Runtime.Versioning"/>
        <Using Include="System.Text"/>
        <Using Include="System.Text.Json"/>

        <Using Include="Rxmxnx.PInvoke.Internal"/>
        <Using Include="Rxmxnx.PInvoke.Internal.Localization"/>
        <Using Include="Rxmxnx.PInvoke.Localization"/>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="ILLink\ILLink.Substitutions.xml">
            <LogicalName>ILLink.Substitutions.xml</LogicalName>
        </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Rxmxnx.PInvoke.CString.Intermediate</_Parameter1>
        </AssemblyAttribute>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Rxmxnx.PInvoke.Extensions.Intermediate</_Parameter1>
        </AssemblyAttribute>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Rxmxnx.PInvoke.Buffers.Intermediate</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>
    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Rxmxnx.PInvoke.Common.Tests</_Parameter1>
        </AssemblyAttribute>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Rxmxnx.PInvoke.CString.Tests</_Parameter1>
        </AssemblyAttribute>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Rxmxnx.PInvoke.Extensions.Tests</_Parameter1>
        </AssemblyAttribute>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Rxmxnx.PInvoke.Buffers.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>
    <ItemGroup>
        <Content Include="..\README.md">
            <Link>README.md</Link>
        </Content>
    </ItemGroup>

</Project>
