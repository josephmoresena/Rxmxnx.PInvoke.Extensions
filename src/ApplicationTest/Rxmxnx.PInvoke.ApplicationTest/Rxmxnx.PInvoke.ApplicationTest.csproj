<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <OutputType>Exe</OutputType>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <TrimMode>full</TrimMode>
        <PublishTrimmed>true</PublishTrimmed>
        <TrimmerSingleWarn>false</TrimmerSingleWarn>
        <SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>
        <PublishAot>true</PublishAot>
        <CopyOutputSymbolsToPublishDirectory>false</CopyOutputSymbolsToPublishDirectory>
    </PropertyGroup>
    
    <PropertyGroup Condition="'$(CreateLogs)' == 'true'">
        <IlcGenerateMetadataLog>true</IlcGenerateMetadataLog>
        <IlcGenerateMstatFile>true</IlcGenerateMstatFile>
        <IlcGenerateDgmlFile>true</IlcGenerateDgmlFile>
    </PropertyGroup>
    
    <PropertyGroup>
        <AssemblyName Condition="'$(DisableBufferAutoComposition)' != 'true'">$(AssemblyName).AutoComposition</AssemblyName>
        <AssemblyName Condition="'$(InvariantGlobalization)' != 'true'">$(AssemblyName).Globalization</AssemblyName>
        <AssemblyName Condition="'$(IlcDisableReflection)' != 'true'">$(AssemblyName).Reflection</AssemblyName>
        <AssemblyName Condition="'$(RuntimeInformation)' != ''">$(AssemblyName).$(RuntimeInformation)</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <Using Include="System.Globalization"/>
        <Using Include="Rxmxnx.PInvoke"/>
        <Using Include="Rxmxnx.PInvoke.Buffers"/>
    </ItemGroup>

    <ItemGroup Condition="'$(USE_PACKAGE)' != 'true'">
        <ProjectReference Include="..\..\Intermediate\Rxmxnx.PInvoke.Buffers.Intermediate\Rxmxnx.PInvoke.Buffers.Intermediate.csproj"/>
        <ProjectReference Include="..\..\Intermediate\Rxmxnx.PInvoke.CString.Intermediate\Rxmxnx.PInvoke.CString.Intermediate.csproj"/>
        <ProjectReference Include="..\..\Intermediate\Rxmxnx.PInvoke.Extensions.Intermediate\Rxmxnx.PInvoke.Extensions.Intermediate.csproj"/>
    </ItemGroup>

    <ItemGroup Condition="'$(USE_PACKAGE)' == 'true'">
        <PackageReference Include="Rxmxnx.PInvoke.Extensions" Version="9999.99.99.99-tmp"/>
    </ItemGroup>
    
    <ItemGroup>
        <RuntimeHostConfigurationOption Condition="'$(DisableBufferAutoComposition)' == 'true'" Include="PInvoke.DisableBufferAutoComposition" Value="true" Trim="true" />
    </ItemGroup>

    <Target Name="CopyTarget" Condition="'$(CopyTargetTo)' != ''" AfterTargets="Publish">
        <ItemGroup>
            <Artifact Include="$(PublishDir)$(AssemblyName)*"/>
            <Artifact Remove="$(PublishDir)$(AssemblyName)*.pdb"/>
            <Artifact Remove="$(PublishDir)$(AssemblyName)*.dwarf"/>
            <Artifact Remove="$(PublishDir)$(AssemblyName)*.dSYM"/>
            <Artifact Remove="$(PublishDir)$(AssemblyName)*.dbg"/>
            <NativeFiles Condition="'$(NativeIntermediateOutputPath)' != ''" Include="$(NativeIntermediateOutputPath)$(AssemblyName)*"/>
            <NativeFiles Condition="'$(NativeIntermediateOutputPath)' != ''" Remove="$(NativeIntermediateOutputPath)$(AssemblyName).o"/>
            <NativeFiles Condition="'$(NativeIntermediateOutputPath)' != ''" Remove="$(NativeIntermediateOutputPath)$(AssemblyName).obj"/>
            <NativeFiles Condition="'$(NativeIntermediateOutputPath)' != ''" Remove="$(NativeIntermediateOutputPath)$(AssemblyName).exports"/>
            <NativeFiles Condition="'$(NativeIntermediateOutputPath)' != ''" Remove="$(NativeIntermediateOutputPath)$(AssemblyName).def"/>
            <NativeFiles Condition="'$(NativeIntermediateOutputPath)' != ''" Remove="$(NativeIntermediateOutputPath)$(AssemblyName).ilc.rsp"/>
        </ItemGroup>
        
        <Copy SourceFiles="@(Artifact)" DestinationFolder="$(CopyTargetTo)" SkipUnchangedFiles="false"/>
        <Copy Condition="'$(NativeIntermediateOutputPath)' != '' And '$(CreateLogs)' == 'true'" SourceFiles="@(NativeFiles)" DestinationFolder="$(CopyTargetTo)\ilcLogs" SkipUnchangedFiles="false"/>

        <!-- Remove NativeIntermediateOutput files -->
        <Delete Condition="'$(NativeIntermediateOutputPath)' != ''" Files="$(NativeIntermediateOutputPath)$(AssemblyName)*"/>
    </Target>
    
</Project>
