<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\Intermediate\Intermediate.Library.targets"/>

    <PropertyGroup>
        <RootNamespace>Rxmxnx.PInvoke.Tests</RootNamespace>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.1'">
        <PackageReference Include="xunit" Version="2.9.3"/>
        <PackageReference Include="Xunit.SkippableFact" Version="1.5.23"/>
    </ItemGroup>
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
        <PackageReference Include="NUnit" Version="3.14"/>
        <PackageReference Include="NUnitLite" Version="3.14.0" GeneratePathProperty="true"/>
    </ItemGroup>

    <ItemGroup>
        <Using Include="System.Diagnostics.CodeAnalysis"/>
        <Using Include="System.Runtime.CompilerServices"/>
        <Using Condition="'$(TargetFramework)' != 'netstandard2.1'" Include="Xunit"/>
        <Using Condition="'$(TargetFramework)' == 'netstandard2.1'" Include="NUnit.Framework"/>
    </ItemGroup>

</Project>
