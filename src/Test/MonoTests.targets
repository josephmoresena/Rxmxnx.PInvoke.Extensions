<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NUnitLite" Version="3.14.0" GeneratePathProperty="true">
            <SetTargetFramework>TargetFramework=netstandard2.0</SetTargetFramework>
        </PackageReference>
    </ItemGroup>

    <Target Name="CopyNUnitLiteRunner" AfterTargets="Build" Condition="'$(TargetFramework)' == 'netstandard2.1'">
        <Copy SourceFiles="$(PkgNUnitLite)\tools\net45\nunitlite-runner.exe"
              DestinationFolder="$(OutDir)"/>
    </Target>

</Project>
